
@model FilterFormModel
@section addcss{

}
<main>

    <!-- Carousel -->
    <div class="container-fluid">
        <div class="slider">
            <section style="height: 100%;">
                <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/img/assets/images/property1.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/assets/images/property2.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/assets/images/property3.jpg" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </section>
            <section class="search-sec">
                <div class="container">
                    <form asp-controller="all" asp-action="index" method="get">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                        <select class="form-control search-slt" id="exampleFormControlSelect1" asp-for="CategoryId" asp-items="ViewBag.Category">
                                        </select>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                        <select class="form-control search-slt" id="exampleFormControlSelect2" asp-for="Roomcount">
                                                <option class="hoverc" value="1">1 otaq</option>
                                                <option  class="hoverc" value="2">2 otaq</option>
                                                <option  class="hoverc" value="3">3 otaq</option>
                                                <option  class="hoverc" value="4">4 otaq</option>
                                                <option  class="hoverc" value="5">5 otaq</option>
                                                <option  class="hoverc" value="6">6 otaq</option>
                                                <option  class="hoverc" value="7">7 otaq</option>
                                        </select>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                            <select class="form-control search-slt" id="exampleFormControlSelect3" asp-for="Region" asp-items="ViewBag.Region"></select>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                        <input type="submit" class="btn wrn-btn" value="Axtar"/>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
    <!-- Cards -->
    <div class="container">
        <section>
            <div class="row cards">

                @await Component.InvokeAsync("Cart", new{counts = ViewBag.Count})
           
            </div>
            <div class="all_properties">
                <a asp-controller="all" asp-action="index" asp-route-count="7" class="btn-1 d-block w-50">Daha çox</a>
            </div>
        </section>

        <!-- Cards of categories -->
       <section class="category-section">
            <div class="card-grid">
                
                  @await Component.InvokeAsync("Category")
                    <div>
                        </div>
                        </div>

        </section>
        <!-- Form -->
         @await Component.InvokeAsync("Form", new {contacts=TempData["contact"]})

        <!-- About -->
        <section class="about">
            <div class="image-box" data-reveal="left">
                <img src="/img//assets/images/sean-pollock-PhYq704ffdA-unsplash.jpg" class="img">
            </div>
            <div class="content-box">
                <h2 class="title" data-reveal="left">
                    Fəaliyyətimiz
                </h2>
                <p class="text-reveal" data-reveal="left">
                    Biz əmlakın dəyərini qiymətləndiririk, danışıqlarda kömək edirik, əməliyyatın hüquqi düzgünlüyünü yoxlayırıq, müqavilələr tərtib edirik və ipoteka kreditinin alınmasına kömək edirik. Biz obyektlərin peşəkar təqdimatlarını yaradırıq, effektiv mənbələrdə reklam yerləşdiririk.
                </p>
            </div>
            <div class="content-box">
                <h2 class="title" data-reveal="left">
                    Üstünlüyümüz
                </h2>
                <p class="text-reveal" data-reveal="left">
                    Biz alıcılara, sahibkarlara və tərtibatçılara premium daşınmaz əmlakın alqı-satqısı sahəsində ən effektiv, sadə və sürətli həllər təklif edirik.
                </p>
            </div>
            <div class="image-box" data-reveal="left">
                <img src="/img/assets/images/joel-filipe-RFDP7_80v5A-unsplash.jpg"class="img">
            </div>
        </section>
    </div>
</main>