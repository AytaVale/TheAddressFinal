@model List<Property>

    <style>
    .wrapper .fotorama__stage {
        height: 266px !important;
     }

    .wrapper .fotorama__active > img {
        height: 267px !important;
     }

    </style>

@if (string.IsNullOrWhiteSpace(ViewBag.Product))
{
    @foreach (var item in Model)
    {
            <div class="card col-xs col-sm col-md-3 col-lg-3">
                <div class="wrapper">
                    <div class="fotorama">
                    @foreach (var itemm in item.PropertyDocuments)
                    {
                                <img class="card-img-top" src="/img/@itemm.DocumentUrl" alt="">
                    }

                    </div>
                </div>
            <a asp-controller="Property" asp-action="index" asp-route-id="@item.Id" class="card-link">
                <div class="card-body" style="color: #212529;">
                <h5 class="card-title" style="font-size: 20px; font-weight: 600;"> @item.Name
                </h5>
                    <p class="card-text">
                    @item.Address
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item" style="font-size: 20px; font-weight: 600;">@((int) item.Price) AZN</li>
                </ul>
              </a>
            </div>

    }
}
else
{
    <div class="col-md-12">
        <h3 style="color: white; text-align: center;">@ViewBag.Product</h3>
    </div>
}


