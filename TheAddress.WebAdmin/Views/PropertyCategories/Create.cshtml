@model PropertyCategoryDto
@{
    ViewData["Title"] = "Create";
}

<div class="layout-px-spacing">

    <div class="row layout-top-spacing">

        <form asp-action="Create" enctype="multipart/form-data" class="mt-3 my-5 mx-3">

            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row">

                <div class="col-md-6 control-label">
                    @Html.ActionLink("Geri", "Index", "PropertyCategories", null, new { @class = "btn btn-info btn-lg btn-block" })

                </div>
                <div class="col-md-6 control-label">
                    <input id="frmProductCat" type="submit" value="Yarat" class="btn btn-success btn-lg btn-block" tabindex="16" />

                </div>

            </div>

        </form>

    </div>
</div>

