@model PropertyDto
@{
    ViewData["Title"] = "Update";
}

<div class="layout-px-spacing">

    <div class="row layout-top-spacing">

        <form method="post" enctype="multipart/form-data" class="mt-3 my-5">

            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ProfileDocPath" hidden />
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                     
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="PropertyCategoryId" class="control-label"></label>

                        <select asp-for="PropertyCategoryId"
                                class="form-control"
                                asp-items="ViewBag.PropertyCategory">
                            <option>Please select one</option>
                        </select>
                        <span asp-validation-for="PropertyCategoryId" class="text-danger"></span>
                    </div>
                </div>
             

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="RoomCount" class="control-label"></label>
                        <input asp-for="RoomCount" class="form-control" />
                        <span asp-validation-for="RoomCount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Floor" class="control-label"></label>
                        <input asp-for="Floor" class="form-control" />
                        <span asp-validation-for="Floor" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Area" class="control-label"></label>
                        <input asp-for="Area" class="form-control" />
                        <span asp-validation-for="Area" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                 <div class="col-2" style="margin: 30px 0px;">
                    <div class="form-group" style="display: flex;">
                        <label asp-for="Buy"></label>
                        <input asp-for="Buy" style="margin-left: 2%;" type="checkbox"/>
                        <span asp-validation-for="Buy" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-2" style="margin: 30px 0px;">
                    <div class="form-group" style="display: flex;">
                        <label asp-for="Rent"></label>
                        <input asp-for="Rent" style="margin-left: 2%;" type="checkbox"/>
                        <span asp-validation-for="Rent" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-8">
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="@Model.ProfileDocPath" class="control-label"></label>
                            <input type="file" name="files" class="form-control" multiple />
                            <span asp-validation-for="@Model.ProfileDocPath" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row">

                <div class="col-md-6 control-label">
                    @Html.ActionLink("Geri", "Index", "Properties", null, new { @class = "btn btn-info btn-lg btn-block" })

                </div>
                <div class="col-md-6 control-label">
                    <input id="frmProduct" type="submit" value="Yadda saxla" class="btn btn-succsess btn-lg btn-block" tabindex="16" />

                </div>

            </div>

        </form>

    </div>
</div>

