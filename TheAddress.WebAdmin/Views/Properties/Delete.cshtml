@model PropertyDto
@{
    ViewData["Title"] = "Delete";
}

<<div class="layout-px-spacing">

    <div class="row layout-top-spacing">

        <form asp-action="Delete" class="mt-3 my-5 mx-3">

            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" readonly class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" disabled></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                   <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" readonly class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" readonly class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                     <div class="col-6">
                    <div class="form-group">
                        <label asp-for="RoomCount" class="control-label"></label>
                        <input asp-for="RoomCount" readonly class="form-control" />
                        <span asp-validation-for="RoomCount" class="text-danger"></span>
                    </div>
                </div>
                     <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Floor" class="control-label"></label>
                        <input asp-for="Floor" readonly class="form-control" />
                        <span asp-validation-for="Floor" class="text-danger"></span>
                    </div>
                </div>
                    <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Area" class="control-label"></label>
                        <input asp-for="Area" readonly class="form-control" />
                        <span asp-validation-for="Area" class="text-danger"></span>
                    </div>
                </div>
                </div>

            <div class="row">
                <div class="col-md-6 control-label">
                    <input id="frmProductCat" type="submit" value="Sil" class="btn btn-danger btn-lg btn-block" tabindex="16" />
                </div>
                    <div class="col-md-6 control-label">
                        @Html.ActionLink("Geri", "Index", "Properties", null, new { @class = "btn btn-info btn-lg btn-block" })
                    </div>
            </div>

        </form>

    </div>
</div>
